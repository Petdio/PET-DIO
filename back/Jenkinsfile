pipeline {
    agent any

    stages {
        stage("Set environment") {
            steps {
                echo "Copy require file to pipeline folder"
                sh 'cp /var/jenkins_home/util/back/application.yml /back/src/main/resources/application.yml'
                sh 'cp /var/jenkins_home/util/back/.env /back/'
            }
        }

        stage('Docker Build') {
            steps {
                dir('back/') {
                    sh 'docker build -t petdio_backend:latest .'
                }
            }
        }

        stage('Deploy') {
            steps {
                sh 'docker rm -f petdio_backend'
                sh 'docker run -d --name petdio_backend -p 8080:8080 -u root petdio_backend:latest'
            }
        }

        stage('Finish') {
            steps {
                sh 'docker images -qf dangling=true | xargs -I{} docker rmi {}'
            }
        }
    }
}